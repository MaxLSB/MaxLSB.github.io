---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["container", className]}>
  <slot />
</div>

<style>
  .container {
    padding: 0 1.5rem;
  }

  @media (max-width: 640px) {
    .container {
      padding: 0 1rem;
      max-width: 100%;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 0.75rem;
    }
  }
</style>

