---
interface Props {
  title: string;
  description?: string;
  url: string;
  date?: Date;
  tags?: string[];
  additionalLinks?: Array<{label: string, url: string, platform?: string}>;
}

const { title, description, url, date, tags, additionalLinks } = Astro.props;
import { formatDate } from "../../utils/date";
import SocialIcon from "../SocialIcon.astro";
---

<article class="project-card">
  <div class="title-row">
    <a href={url}>{title}</a>
    <div class="title-right">
      {date && <time datetime={date.toISOString()}>{formatDate(date)}</time>}
      {
        additionalLinks && additionalLinks.length > 0 && (
          <div class="logo-group">
            {additionalLinks.map((link) => (
              <a href={link.url} target="_blank" rel="noopener noreferrer" class={`logo-link ${link.platform?.toLowerCase() === 'hugging face' ? 'hf-link' : ''}`}>
                {link.platform && <SocialIcon platform={link.platform} size={20} />}
              </a>
            ))}
          </div>
        )
      }
    </div>
  </div>
  <p class="muted-text">{description}</p>
  {
    tags && (
      <div class="tags">
        {tags.map((tag) => (
          <span>{tag}</span>
        ))}
      </div>
    )
  }
</article>

<style>
  .project-card {
    border: 1px solid var(--border-color);
    border-radius: 0.5rem;
    padding: 1.5rem;
    background: var(--bg-color);
    transition: border-color 0.2s ease;
  }

  .project-card:hover {
    border-color: var(--link-color);
  }

  .title-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .title-row a {
    font-size: var(--text-lg);
    text-decoration: none;
    color: var(--text-color);
  }

  .title-row a:hover {
    color: var(--link-color);
  }

  .title-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .logo-group {
    display: flex;
    gap: 0.25rem;
    align-items: center;
  }

  .logo-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    color: var(--text-muted);
    transition: opacity 0.2s ease;
    padding: 0.25rem;
    width: 24px;
    height: 24px;
  }

  .logo-link.hf-link {
    width: 28px;
    height: 28px;
  }

  .logo-link:hover {
    opacity: 0.7;
  }

  .tags {
    display: flex;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .tags span {
    font-size: var(--text-xs);
    opacity: 0.5;
  }
</style>
