---
import { getEntry } from "astro:content";
import BaseLayout from "../components/layout/BaseLayout.astro";
import Container from "../components/ui/Container.astro";
import SocialIcon from "../components/SocialIcon.astro";

const siteConfig = await getEntry("site", "home");
if (!siteConfig) {
  throw new Error("Site configuration not found");
}

const site = siteConfig.data;
---

<BaseLayout title={site.name} description="Maxence Lasbordes - AI/ML Researcher">
  <Container>
    <section class="hero">
      <h1>{site.name}</h1>
      <p class="subtitle">Research Intern @LightOn</p>
      {
        site.socialLinks && (
          <div class="social-links">
            {site.socialLinks.map(({ platform, url }) => (
              <a href={url} target="_blank" rel="noopener noreferrer" class="social-link">
                <SocialIcon platform={platform} size={platform.toLowerCase() === 'hugging face' ? 18 : 14} />
                <span>{platform}</span>
              </a>
            ))}
          </div>
        )
      }
    </section>
  </Container>
</BaseLayout>

<style>
  main {
    width: 100%;
    max-width: 768px;
    margin: 0 auto;
    padding: 2rem 0;
    overflow-x: hidden;
  }

  .hero {
    padding: 4rem 0;
    text-align: center;
    overflow-x: hidden;
  }

  h1 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: var(--text-color);
  }

  .subtitle {
    font-size: 1.125rem;
    font-weight: 400;
    margin-bottom: 2rem;
    color: var(--text-muted);
  }

  .social-links {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    flex-wrap: nowrap;
    margin-top: 2rem;
    overflow-x: hidden;
    max-width: 100%;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.375rem;
    color: var(--text-color);
    text-decoration: none;
    font-size: var(--text-xs);
    padding: 0.375rem 0.5rem;
    border-radius: 0.25rem;
    border: 1px solid var(--border-color);
    background: var(--bg-color);
    white-space: nowrap;
    flex-shrink: 0;
    min-height: 2rem;
    transition: color var(--link-animation-duration) ease;
    transform: none;
  }

  .social-link:hover {
    color: var(--link-color);
    transform: none;
  }

  .social-link span {
    position: relative;
    transition: color var(--link-animation-duration) ease;
    font-size: var(--text-sm);
  }

  .social-link span::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: currentColor;
    transition: width var(--link-animation-duration) ease;
  }

  .social-link:hover span::after {
    width: 100%;
  }

  @media (max-width: 640px) {
    main {
      padding: 1rem 0;
    }

    .hero {
      padding: 3rem 0;
    }

    h1 {
      font-size: 1.75rem;
    }

    .subtitle {
      font-size: 0.95rem;
    }

    .social-links {
      gap: 0.5rem;
      padding: 0 1rem;
    }

    .social-link {
      padding: 0.25rem 0.375rem;
      font-size: var(--text-xs);
      min-height: 1.75rem;
    }

    .social-link span {
      font-size: var(--text-xs);
    }
  }
</style>
