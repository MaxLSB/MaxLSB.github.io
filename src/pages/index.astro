---
import { getEntry } from "astro:content";
import BaseLayout from "../components/layout/BaseLayout.astro";
import Container from "../components/ui/Container.astro";
import SocialIcon from "../components/SocialIcon.astro";

const siteConfig = await getEntry("site", "home");
if (!siteConfig) {
  throw new Error("Site configuration not found");
}

const site = siteConfig.data;
---

<BaseLayout title={site.name} description="Maxence Lasbordes - AI/ML Researcher">
  <Container>
    <section class="hero">
      <div class="profile-picture">
        <img 
          src="/images/pp_max.jpg" 
          alt="Maxence Lasbordes" 
          loading="eager"
          fetchpriority="high"
          width="200"
          height="200"
        />
      </div>
      <h1>{site.name}</h1>
      
      {
        site.socialLinks && (
          <div class="social-links">
            {site.socialLinks.map(({ platform, url }: { platform: string; url: string }) => (
              <a href={url} target="_blank" rel="noopener noreferrer" class="social-link">
                <SocialIcon platform={platform} size={platform.toLowerCase() === 'hugging face' ? 18 : 14} />
                <span>{platform}</span>
              </a>
            ))}
          </div>
        )
      }
      
      <div class="affiliations">
        <div class="affiliation">
          <img 
            src="/images/LightOn.png" 
            alt="LightOn" 
            class="affiliation-logo" 
            loading="lazy"
            width="48"
            height="48"
          />
          <a href="https://www.lighton.ai/" target="_blank" rel="noopener noreferrer" class="affiliation-text">@LightOn</a>
        </div>
        <div class="affiliation">
          <img 
            src="/images/kurakurai-logo.png" 
            alt="KuraKurai" 
            class="affiliation-logo" 
            loading="lazy"
            width="48"
            height="48"
          />
          <a href="https://huggingface.co/kurakurai" target="_blank" rel="noopener noreferrer" class="affiliation-text">@KuraKura AI</a>
        </div>
      </div>
    </section>
  </Container>
</BaseLayout>

<style>
  main {
    width: 100%;
    max-width: 768px;
    margin: 0 auto;
    padding: 2rem 0;
    overflow-x: hidden;
  }

  .hero {
    padding: 2rem 0;
    text-align: center;
    overflow-x: hidden;
  }

  .profile-picture {
    margin-bottom: 1.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .profile-picture img {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
  }

  h1 {
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
    color: var(--text-color);
    letter-spacing: -0.02em;
  }

  .subtitle {
    font-size: 1.25rem;
    font-weight: 300;
    margin-bottom: 1.5rem;
    color: var(--text-color);
    letter-spacing: -0.01em;
  }


  .social-links {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    flex-wrap: nowrap;
    margin-top: 2rem;
    overflow-x: hidden;
    max-width: 100%;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.375rem;
    color: var(--text-color);
    text-decoration: none;
    font-size: var(--text-xs);
    padding: 0.375rem 0.5rem;
    border-radius: 0.25rem;
    border: 1px solid var(--border-color);
    background: var(--bg-color);
    white-space: nowrap;
    flex-shrink: 0;
    min-height: 2rem;
    transition: color var(--link-animation-duration) ease;
    transform: none;
  }

  .social-link:hover {
    color: var(--link-color);
    transform: none;
  }

  .social-link span {
    position: relative;
    transition: color var(--link-animation-duration) ease;
    font-size: var(--text-sm);
  }

  .social-link span::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: currentColor;
    transition: width var(--link-animation-duration) ease;
  }

  .social-link:hover span::after {
    width: 100%;
  }

  .affiliations {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    margin-top: 1.5rem;
  }

  .affiliation {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: var(--text-sm);
  }

  .affiliation-text {
    color: var(--text-muted);
    text-decoration: none;
    transition: color var(--link-animation-duration) ease;
  }

  .affiliation-text:hover {
    color: var(--link-color);
  }

  .affiliation-logo {
    width: 48px;
    height: 48px;
    object-fit: contain;
    opacity: 0.85;
    border-radius: 0.5rem;
  }

  @media (max-width: 640px) {
    main {
      padding: 1rem 0;
    }

    .hero {
      padding: 1.5rem 0;
    }

    .profile-picture {
      margin-bottom: 1rem;
    }

    .profile-picture img {
      width: 180px;
      height: 180px;
    }

    h1 {
      font-size: 1.25rem;
    }

    .subtitle {
      font-size: 1.1rem;
    }


    .social-links {
      gap: 0.5rem;
      padding: 0 1rem;
    }

    .social-link {
      padding: 0.25rem 0.375rem;
      font-size: var(--text-xs);
      min-height: 1.75rem;
    }

    .social-link span {
      font-size: var(--text-xs);
    }

    .affiliations {
      gap: 1rem;
      margin-top: 1rem;
    }

    .affiliation {
      font-size: var(--text-xs);
    }

    .affiliation-logo {
      width: 36px;
      height: 36px;
    }
  }
</style>
