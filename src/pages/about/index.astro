---
import BaseLayout from "../../components/layout/BaseLayout.astro";
import BaseHero from "../../components/shared/BaseHero.astro";
import ArticleCard from "../../components/ui/ArticleCard.astro";
import Container from "../../components/ui/Container.astro";
import ContentList from "../../components/shared/ContentList.astro";
---

<BaseLayout title="About Me" description="Learn more about my background and experiences">
  <Container>
    <BaseHero title="About Me" description="Learn more about my background and experiences" />
    
    <!-- Experiences Section -->
    <section class="section">
      <h2>Experiences</h2>
      <ContentList>
        <ArticleCard
          title="AI Research Intern"
          description="LightOn"
          url="#"
          logo="/images/LightOn.png"
          dateRange="April 2025 - ongoing"
        />
        <ArticleCard
          title="AI Research Intern"
          description="Fondazione Bruno Kessler"
          url="#"
          logo="/images/FBK.jpg"
          dateRange="June 2024 - September 2024"
        />
      </ContentList>
    </section>

    <!-- Education Section -->
    <section class="section">
      <h2>Education</h2>
      <ContentList>
        <ArticleCard
          title="Master in Machine Learning"
          description="IASD - ENS-Ulm & Paris Dauphine-PSL"
          url="#"
          logo="/images/IASD.png"
          dateRange="2024 - 2025"
        />
        <ArticleCard
          title="Master in Machine Learning"
          description="MVA - ENS Paris-Saclay (Cross-enrollement)"
          url="#"
          logo="/images/MVA.png"
          dateRange="2024 - 2025"
        />
        <ArticleCard
          title="MSc in Statistics"
          description="Télécom SudParis"
          url="#"
          logo="/images/TSP.png"
          dateRange="2021 - 2024"
        />
        <ArticleCard
          title="Preparatory Classes MPSI - MP*"
          description="Fénelon-Sainte-Marie"
          url="#"
          logo="/images/FSM.png"
          dateRange="2019 - 2021"
        />
      </ContentList>
    </section>
  </Container>
</BaseLayout>

<style>
  /* Prevent layout shift by using CSS custom properties */
  :root {
    --scrollbar-width: 0px;
  }

  /* Calculate scrollbar width and store it */
  html {
    scrollbar-gutter: stable both-edges;
  }

  /* Force consistent layout by preventing horizontal overflow */
  body {
    overflow-x: hidden;
    min-width: 100vw;
  }

  /* Ensure the main container doesn't shift */
  .container {
    width: 100%;
    max-width: 768px;
    margin: 0 auto;
    box-sizing: border-box;
  }

  /* Prevent any horizontal movement */
  html, body {
    position: relative;
    left: 0;
    right: 0;
  }

  .section h2 {
    margin-bottom: 1rem;
  }

  .section + .section {
    margin-top: 3rem;
  }
</style>

<script>
  // Calculate scrollbar width to prevent layout shift
  const scrollbarWidth = window.innerWidth - document.documentElement.clientWidth;
  document.documentElement.style.setProperty('--scrollbar-width', `${scrollbarWidth}px`);
</script>

