---
import BaseLayout from "../../components/layout/BaseLayout.astro";
import BaseHero from "../../components/shared/BaseHero.astro";
import Container from "../../components/ui/Container.astro";
import ArticleCard from "../../components/ui/ArticleCard.astro";
import ContentList from "../../components/shared/ContentList.astro";
---

<BaseLayout title="About Me" description="Learn more about my background, experience, and interests">
  <Container>
    <BaseHero title="About Me" description="Learn more about my background, experience, and interests" />
    
    <div class="about-content">
      <section class="about-section">
        <h2>Background</h2>
        <p>
          I'm passionate about technology and its potential to solve real-world problems. 
          My journey in software development has led me to work on various projects, 
          from web applications to research initiatives.
        </p>
        <p>
          I believe in continuous learning and staying up-to-date with the latest 
          technologies and best practices in the field.
        </p>
      </section>

      <section class="about-section">
        <h2>Skills & Interests</h2>
        <div class="skills-grid">
          <div class="skill-category">
            <h3>Programming Languages</h3>
            <div class="skill-tags">
              <span class="skill-tag">JavaScript</span>
              <span class="skill-tag">TypeScript</span>
              <span class="skill-tag">Python</span>
              <span class="skill-tag">Rust</span>
              <span class="skill-tag">Go</span>
            </div>
          </div>
          
          <div class="skill-category">
            <h3>Frameworks & Tools</h3>
            <div class="skill-tags">
              <span class="skill-tag">React</span>
              <span class="skill-tag">Vue.js</span>
              <span class="skill-tag">Astro</span>
              <span class="skill-tag">Node.js</span>
              <span class="skill-tag">Docker</span>
            </div>
          </div>
          
          <div class="skill-category">
            <h3>Areas of Interest</h3>
            <div class="skill-tags">
              <span class="skill-tag">Web Development</span>
              <span class="skill-tag">Machine Learning</span>
              <span class="skill-tag">System Design</span>
              <span class="skill-tag">Open Source</span>
            </div>
          </div>
        </div>
      </section>

      <section class="about-section">
        <h2>Get in Touch</h2>
        <p>
          I'm always interested in connecting with fellow developers, researchers, 
          and anyone passionate about technology. Feel free to reach out!
        </p>
        <div class="contact-links">
          <a href="mailto:your.email@example.com" class="contact-link">
            Email
          </a>
          <a href="https://github.com/yourusername" target="_blank" rel="noopener noreferrer" class="contact-link">
            GitHub
          </a>
          <a href="https://linkedin.com/in/yourprofile" target="_blank" rel="noopener noreferrer" class="contact-link">
            LinkedIn
          </a>
          <a href="https://twitter.com/yourusername" target="_blank" rel="noopener noreferrer" class="contact-link">
            Twitter
          </a>
        </div>
      </section>
    </div>
  </Container>
</BaseLayout>

<style>
  .about-content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    margin-top: 2rem;
  }

  .about-section h2 {
    margin-bottom: 1.5rem;
    color: var(--text-color);
  }

  .about-section p {
    color: var(--text-muted);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .skill-category h3 {
    margin-bottom: 1rem;
    font-size: var(--text-lg);
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skill-tag {
    background: var(--bg-color-muted);
    color: var(--text-muted);
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    font-size: var(--text-sm);
    border: 1px solid var(--border-color);
    transition: all 0.2s ease;
  }

  .skill-tag:hover {
    background: var(--link-color);
    color: white;
    border-color: var(--link-color);
  }

  .contact-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 1rem;
  }

  .contact-link {
    color: var(--link-color);
    text-decoration: none;
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--link-color);
    border-radius: 0.375rem;
    transition: all 0.2s ease;
    font-size: var(--text-sm);
  }

  .contact-link:hover {
    background: var(--link-color);
    color: white;
  }

  @media (max-width: 640px) {
    .about-content {
      gap: 2rem;
    }

    .skills-grid {
      grid-template-columns: 1fr;
    }

    .contact-links {
      flex-direction: column;
    }

    .contact-link {
      text-align: center;
    }
  }
</style>
